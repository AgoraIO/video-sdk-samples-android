<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultipleChannelsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <include
            android:id="@+id/base_layout"
            layout="@layout/base_layout" />

        <Button
            android:id="@+id/customAudioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/base_layout"
            android:layout_alignEnd="@id/base_layout"
            android:layout_alignStart="@id/base_layout"
            android:onClick="channelRelay"
            android:text="@string/start_channel_media_relay" />

        <Button
            android:id="@+id/customVideoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customAudioButton"
            android:layout_alignEnd="@id/base_layout"
            android:layout_alignStart="@id/base_layout"
            android:onClick="streamToMultipleChannels"
            android:text="Stream to multiple channels" />

    </RelativeLayout>

</ScrollView>
